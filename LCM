#include <stdio.h>

int main() {
    int a, b, lcm;

    // Input two numbers
    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    // Start from the larger number
    lcm = (a > b) ? a : b;

    // Keep increasing until we find a common multiple
    while (1) {
        if (lcm % a == 0 && lcm % b == 0) {
            // Found the LCM
            break;
        }
        lcm++;  // check next number
    }

    printf("LCM of %d and %d = %d", a, b, lcm);

    return 0;
}
