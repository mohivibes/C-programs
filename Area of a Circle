
#include <stdio.h>
#include <math.h>
int main() {
 double radius, area;
 printf("Enter the radius of the circle: ");
 scanf("%lf", &radius);
 if (radius >= 0) {
 area = M_PI * pow(radius, 2);
 printf("Area of the circle: %.2lf\n", area);
 } else {
 printf("Invalid input. Radius cannot be negative.\n");
 }
 return 0;
} 
